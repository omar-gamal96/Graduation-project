using System;
using System.Collections.Generic;

class Product
{
    public int Id;
    public string Name;
    public int Quantity;
    public decimal Price;
}

class Program
{
    static List<Product> products = new List<Product>();

    static void Main()
    {
        while (true)
        {
            ShowMenu();
            string choice = Console.ReadLine();

            if (choice == "1") AddProduct();
            else if (choice == "2") ShowProducts();
            else if (choice == "3") SearchProduct();
            else if (choice == "4") UpdateProduct();
            else if (choice == "5") DeleteProduct();
            else if (choice == "6") break;
            else Console.WriteLine("Invalid choice");
        }
    }

    // ===== Menu =====
    static void ShowMenu()
    {
        Console.WriteLine("\n--- Inventory Management System ---");
        Console.WriteLine("1- Add Product");
        Console.WriteLine("2- Show All Products");
        Console.WriteLine("3- Search Product");
        Console.WriteLine("4- Update Product");
        Console.WriteLine("5- Delete Product");
        Console.WriteLine("6- Exit");
        Console.Write("Choose an option: ");
    }

    // ===== Add =====
    static void AddProduct()
    {
        Product p = new Product();

        Console.Write("ID: ");
        p.Id = Convert.ToInt32(Console.ReadLine());

        Console.Write("Name: ");
        p.Name = Console.ReadLine();

        Console.Write("Quantity: ");
        p.Quantity = Convert.ToInt32(Console.ReadLine());

        Console.Write("Price: ");
        p.Price = Convert.ToDecimal(Console.ReadLine());

        products.Add(p);
        Console.WriteLine("Product added");
    }

    // ===== Show =====
    static void ShowProducts()
    {
        foreach (Product p in products)
        {
            Console.WriteLine($"{p.Id} - {p.Name} - {p.Quantity} - {p.Price}");
        }
    }

    // ===== Search =====
    static void SearchProduct()
    {
        Console.Write("Enter name: ");
        string name = Console.ReadLine();

        foreach (Product p in products)
        {
            if (p.Name == name)
            {
                Console.WriteLine($"{p.Id} - {p.Name} - {p.Quantity} - {p.Price}");
                return;
            }
        }

        Console.WriteLine("Product not found");
    }

    // ===== Update =====
    static void UpdateProduct()
    {
        Console.Write("Enter ID: ");
        int id = Convert.ToInt32(Console.ReadLine());

        foreach (Product p in products)
        {
            if (p.Id == id)
            {
                Console.Write("New Name: ");
                p.Name = Console.ReadLine();

                Console.Write("New Quantity: ");
                p.Quantity = Convert.ToInt32(Console.ReadLine());

                Console.Write("New Price: ");
                p.Price = Convert.ToDecimal(Console.ReadLine());

                Console.WriteLine("Product updated");
                return;
            }
        }

        Console.WriteLine("Product not found");
    }

    // ===== Delete =====
    static void DeleteProduct()
    {
        Console.Write("Enter ID: ");
        int id = Convert.ToInt32(Console.ReadLine());

        products.RemoveAll(p => p.Id == id);
        Console.WriteLine("Product deleted");
    }
}
